{
	"name": "eslint-config-hoishin",
	"version": "0.2.6",
	"description": "ESLint config for TypeScript projects",
	"repository": "https://github.com/Hoishin/eslint-config-hoishin.git",
	"license": "MIT",
	"author": {
		"name": "Keiichiro Amemiya",
		"email": "hoishinxii@gmail.com"
	},
	"files": [
		"config",
		"index.js",
		"react.js",
		"typescript.js"
	],
	"scripts": {
		"ensure-no-unsued:index": "eslint-find-rules -u index.js",
		"ensure-no-unsued:typescript": "eslint-find-rules -u typescript.js",
		"lint": "eslint .",
		"release": "npm test && standard-version",
		"test": "run-s lint ensure-no-unsued:*"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^2.4.0",
		"@typescript-eslint/parser": "^2.4.0",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-prefer-arrow": "^1.1.6",
		"eslint-plugin-react": "^7.15.1",
		"eslint-plugin-react-hooks": "^3.0.0",
		"eslint-plugin-unicorn": "^19.0.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/eslint": "^6.1.2",
		"@types/node": "^10.14.22",
		"@types/react": "^16.9.11",
		"del": "^5.1.0",
		"eslint": "^6.5.1",
		"eslint-find-rules": "^3.4.0",
		"husky": "^4.0.0",
		"lint-staged": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.0",
		"react": "^16.11.0",
		"sort-package-json": "^1.22.1",
		"standard-version": "^7.0.0",
		"typescript": "3.8.3"
	},
	"peerDependencies": {
		"eslint": "^6.5.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
