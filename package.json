{
	"name": "@hoishin/eslint-config-ts",
	"version": "0.0.5",
	"description": "ESLint config for TypeScript projects",
	"repository": "https://github.com/Hoishin/eslintrc-ts.git",
	"license": "MIT",
	"author": "Hoishin <hoishinxii@gmail.com>",
	"files": [
		"lib"
	],
	"main": "lib/index.js",
	"scripts": {
		"test": "eslint --ext .ts test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^1.3.0",
		"eslint": "^6.0.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-prefer-arrow": "^1.1.4",
		"eslint-plugin-unicorn": "^7.1.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "2.1.1",
		"@hoishin/tsconfig": "1.0.0",
		"@types/node": "10.14.12",
		"husky": "1.3.1",
		"lint-staged": "8.2.1",
		"prettier": "1.18.2",
		"sort-package-json": "1.22.1",
		"ts-node": "8.0.2",
		"typescript": "3.3.3"
	},
	"peerDependencies": {
		"typescript": "^3.3.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
