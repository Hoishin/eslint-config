{
	"name": "@hoishin/eslint-config",
	"version": "0.0.5",
	"description": "ESLint config for TypeScript projects",
	"repository": "https://github.com/Hoishin/eslint-config.git",
	"license": "MIT",
	"author": {
		"name": "Keiichiro Amemiya",
		"email": "hoishinxii@gmail.com"
	},
	"files": [
		"config",
		"index.js",
		"react.js",
		"typescript.js"
	],
	"scripts": {
		"test": "eslint --ext .ts test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "1.12.0",
		"@typescript-eslint/parser": "1.12.0",
		"eslint-config-prettier": "6.0.0",
		"eslint-plugin-import": "2.18.0",
		"eslint-plugin-prefer-arrow": "1.1.5",
		"eslint-plugin-prettier": "3.1.0",
		"eslint-plugin-react": "7.14.2",
		"eslint-plugin-react-hooks": "1.6.1",
		"eslint-plugin-unicorn": "9.1.1",
		"prettier": "1.18.2"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/eslint": "^4.16.6",
		"@types/node": "^10.14.13",
		"eslint": "^5.16.0",
		"husky": "^3.0.0",
		"lint-staged": "^9.2.0",
		"sort-package-json": "^1.22.1",
		"typescript": "3.5.3"
	},
	"peerDependencies": {
		"eslint": "^5.16.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
