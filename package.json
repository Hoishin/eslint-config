{
	"name": "eslint-config-hoishin",
	"version": "0.3.0",
	"description": "ESLint config for TypeScript projects",
	"repository": "https://github.com/Hoishin/eslint-config-hoishin.git",
	"license": "MIT",
	"author": {
		"name": "Keiichiro Amemiya",
		"email": "hoishinxii@gmail.com"
	},
	"files": [
		"config",
		"index.js",
		"react.js",
		"typescript.js"
	],
	"scripts": {
		"ensure-no-unsued:index": "eslint-find-rules -u index.js",
		"ensure-no-unsued:typescript": "eslint-find-rules -u typescript.js --no-core",
		"lint": "eslint --ext=.js,.ts,.tsx .",
		"release": "npm test && standard-version",
		"test": "run-s lint ensure-no-unsued:*"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		],
		"package.json": [
			"sort-package-json"
		]
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prefer-arrow": "^1.2.1",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.4",
		"eslint-plugin-unicorn": "^23.0.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/eslint": "^6.8.1",
		"@types/node": "12",
		"@types/react": "^16.9.35",
		"del": "^5.1.0",
		"eslint": "^7.1.0",
		"eslint-find-rules": "^3.5.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.8",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"react": "^16.11.0",
		"sort-package-json": "^1.44.0",
		"standard-version": "^8.0.0",
		"typescript": "3.9.3"
	},
	"peerDependencies": {
		"eslint": "^7.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
