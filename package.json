{
	"name": "eslint-config-hoishin",
	"version": "0.1.2",
	"description": "ESLint config for TypeScript projects",
	"repository": "https://github.com/Hoishin/eslint-config-hoishin.git",
	"license": "MIT",
	"author": {
		"name": "Keiichiro Amemiya",
		"email": "hoishinxii@gmail.com"
	},
	"files": [
		"config",
		"index.js",
		"react.js",
		"typescript.js"
	],
	"scripts": {
		"test": "eslint --ext .ts test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "2.3.2",
		"@typescript-eslint/parser": "2.3.2",
		"eslint-config-prettier": "6.3.0",
		"eslint-plugin-import": "2.18.2",
		"eslint-plugin-prefer-arrow": "1.1.6",
		"eslint-plugin-prettier": "3.1.1",
		"eslint-plugin-react": "7.15.1",
		"eslint-plugin-react-hooks": "2.1.2",
		"eslint-plugin-unicorn": "12.0.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/eslint": "^6.1.2",
		"@types/node": "^10.14.20",
		"eslint": "^6.5.1",
		"husky": "^3.0.8",
		"lint-staged": "^9.4.1",
		"prettier": "1.18.2",
		"sort-package-json": "^1.22.1",
		"typescript": "3.6.3"
	},
	"peerDependencies": {
		"eslint": "^6.5.1",
		"prettier": "*"
	},
	"publishConfig": {
		"access": "public"
	}
}
